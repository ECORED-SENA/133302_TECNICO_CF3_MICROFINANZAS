include mixins/functions

doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    include includes/page-home_topbar.pug

                    +pageHeader("Tema", "assets/images/header/header_media.svg", "")   

        section#ResultadosAprendizaje.curso-resultados.section.bg-base-light

            .container

                include includes/page-home_resultados.pug  

        section#IndiceTematico.curso-indice-tematico.section

            .container

                h2 Desarrollo de <br>contenidos
                .brand-line-primary

                .row.justify-content-center
                    .col-12.col-sm-10
                        .card.wow.flipInX(data-wow-delay=".4s")
                            
                            .card-body

                                ul.list-group.list-group-flush.list.my-n3.nav-temas
                                    +navTemaItem('1', 'Mercado objetivo', '#tema-1')
                                    +navTemaItem('2', 'Sistema de administración de riesgo crediticio SARC', '#tema-2')
                                    +navTemaItem('3', 'Estrategias de identificación de necesidades de los clientes', '#tema-3')
                                    +navTemaItem('4', 'Factores de evaluación para los microcréditos', '#tema-4')
                                    +navTemaItem('5', 'Métodos de cálculo para crédito.', '#tema-5')
                                    +navTemaItem('6', 'Contabilidad básica', '#tema-6')
                                    +navTemaItem('7', 'Cliente microfinanciero', '#tema-7')
                                    +navTemaItem('8', 'Bases de datos', '#tema-8')
                                    +navTemaItem('9', 'Técnicas de comprobación de la información de clientes ', '#tema-9')
                                    +navTemaItem('10', 'Análisis financiero', '#tema-10')
                                    +navTemaItem('11', 'Indicadores de gestión', '#tema-11')
                                    +navTemaItem('12', 'Modelos de informes microfinancieros', '#tema-12')
                                    +navTemaItem('13', 'Desembolso', '#tema-13')
                                    +navTemaItem('glosary', 'Glosario', '#glosario')
                                    +navTemaItem('folder', 'Material complementario', '#anexos')   
                                    +navTemaItem('references', 'Referencias bibliográficas', '#referencias')


        section#mainContent
            #tema-1
                include pages/tema-1.pug
            #tema-2
                include pages/tema-2.pug                 
            #tema-3
                include pages/tema-3.pug 
            #tema-4
                include pages/tema-4.pug   
            #tema-5
                include pages/tema-5.pug
            #tema-6
                include pages/tema-6.pug
            #tema-7
                include pages/tema-7.pug
            #tema-8
                include pages/tema-8.pug
            #tema-9
                include pages/tema-9.pug
            #tema-10
                include pages/tema-10.pug
            #tema-11
                include pages/tema-11.pug
            #tema-12
                include pages/tema-12.pug
            #tema-13
                include pages/tema-13.pug                                         
            #glosario
                include pages/glosario.pug
            #anexos
                include pages/material-complementario.pug                       
            #referencias
                include pages/referencias.pug


        +creditosFooter("assets/images/logos/senaLogo.svg")


        a.scroll-to-top-btn
            .fa.fa-angle-up.fa-2x

        script(src="assets/js/vendor.js")
